{{>header}}
{{>nav}}
<table class="table table-stripped">
    <thead>
        <th>user id</th>
        <th>user name</th>
        <th>user email</th>
        <th>user phone</th>
        <th>user message</th>
        <th>actions</th>
    </thead>
    {{#each data}}
    <tr>
        <td>{{this._id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.phone}}</td>
        <td>{{this.msg}}</td>
        <td>
            <a href="/deleteuser/{{this._id}}" class="btn btn-danger">Delete</a>
            <a href="/showAll/{{this._id}}" class="btn btn-danger">Show</a>
            <a href="/editeuser/{{this._id}}" class="btn btn-danger">Edit</a>

        </td>
    </tr>
    {{/each}}
</table>
{{>footer}}